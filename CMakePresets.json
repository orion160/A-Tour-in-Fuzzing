{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "x64-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "x64-linux",
      "hidden": true,
      "inherits": "x64-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_LINKER_TYPE": "LLD",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "x64-linux-debug",
      "inherits": "x64-linux",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-linux-release",
      "inherits": "x64-linux",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-linux-libFuzzer",
      "inherits": "x64-linux",
      "hidden": false,
      "cacheVariables": {
        "ENABLE_FUZZING": "libFuzzer",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ]
}
